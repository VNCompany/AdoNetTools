<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<link rel="stylesheet" href="~/static/css/bootstrap.min.css">
<link rel="stylesheet" href="~/static/css/main.css">
@await RenderSectionAsync("Links", false)
<title>@ViewData["title"] - Портал объявлений</title>
</head>
<body>

<nav class="navbar navbar-expand navbar-light bg-light">
  <a class="navbar-brand h1" href="/Home/Index">Портал объявлений</a>

  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/Home/Index">Главная</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/Home/Catalog">Каталог</a>
      </li>
      @if (ViewData.ContainsKey("User"))
      {
        <li class="nav-item">
          <a class="nav-link" href="/Profile/Index">Профиль</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Profile/NewPost">Разместить объявление</a>
        </li>
      }
      else
      {
        <li class="nav-item">
          <a class="nav-link" href="/Profile/Login">Авторизация</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Profile/Register">Регистрация</a>
        </li>
      }
    </ul>
    <form class="form-inline my-2 my-lg-0" action="/Home/Index" method="get">
      <input class="form-control mr-sm-2" type="search" placeholder="Поиск" name="q" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button>
    </form>
  </div>
</nav>
@if (ViewData.TryGetValue("ErrorMsg", out var errorMsg))
{
  <p class="alert-danger" style="font-size: 16pt">@errorMsg</p>
}

@RenderBody()

</body>
</html>